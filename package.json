{
  "name": "typescript-express-starter",
  "version": "1.0.0",
  "description": "Nodejs setup with typescript and express.js",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "preserve": "npm run build",
    "start": "cross-env NODE_ENV=production node build/src/index.js",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch src/index.ts\" \"nodemon -q build/src/index.js\"",
    "prestart": "npm run build",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "swagger": "tsoa spec"
  },
  "author": "Utkarsh Siddharth",
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.39",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "colors": "^1.4.0",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "tsoa": "^4.1.0"
  },
  "volta": {
    "node": "16.15.0"
  }
}
